{
  "name": "taki-firefox",
  "version": "0.0.0",
  "description": "HTML snapshot/prerender via Playwright (Firefox)",
  "type": "module",
  "license": "MIT",
  "engines": {
    "node": ">=20.19"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "fmt": "biome format --write .",
    "lint": "biome check .",
    "pw:install": "playwright install firefox",
    "demo": "npm run build && node examples/demo.mjs",
    "demo:debug": "npm run build && node examples/demo.mjs",
    "demo:headful": "npm run build && node examples/demo.mjs",
    "demo:install": "npm run pw:install"
  },
  "dependencies": {
    "debug": "^4.4.3",
    "html-minifier-terser": "^7.2.0",
    "playwright-firefox": "^1.56.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/debug": "^4.1.12",
    "@types/html-minifier-terser": "^7.0.2",
    "@types/node": "^22.0.0",
    "get-port": "^7.1.0",
    "sirv": "^3.0.2",
    "tsdown": "^0.18.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
